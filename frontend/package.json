{
  "name": "counter-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:kiosk": "vite --config vite.kiosk.config.js",
    "dev:counter": "vite --config vite.counter.config.js",
    "dev:screen": "vite --config vite.screen.config.js",
    "build:kiosk": "vite build --config vite.kiosk.config.js",
    "build:counter": "vite build --config vite.counter.config.js",
    "build:screen": "vite build --config vite.screen.config.js",
    "dev": "concurrently -n kiosk,counter,screen -c cyan,magenta,yellow \"npm run dev:kiosk\" \"npm run dev:counter\" \"npm run dev:screen\"",
    "build": "npm run build:kiosk && npm run build:admin",
    "preview:kiosk": "vite preview --config vite.kiosk.config.js --port 4174",
    "preview:counter": "vite preview --config vite.counter.config.js --port 4175",
    "preview:screen": "vite preview --config vite.screen.config.js --port 4176",
    "lint": "eslint ."
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.13",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2"
  }
}